  <insert id="insertBuyInfoSquare" useGeneratedKeys="true" parameterType="com.liyang.orchard.model.infosquare.BuyInfoSquare">
    insert into info_square(user_id,title,description,address,phone,buy_weight,name,info_type_id,release_date)
    values(#{BIS.userId},#{BIS.title},#{BIS.description},#{BIS.address},#{BIS.phone},#{BIS.buyWeight},#{name},2,NOW())
  </insert>

  <insert id="insertSupplyInfoSquare" useGeneratedKeys="true" parameterType="com.liyang.orchard.model.infosquare.SupplyInfoSquare">
    insert into info_square(user_id,title,description,address,phone,name,info_type_id,release_date)
    values(#{SIS.userId},#{SIS.title},#{SIS.description},#{SIS.address},#{SIS.phone},#{name},1,NOW())
  </insert>

  <insert id="insertLabourInfoSquare" useGeneratedKeys="true" parameterType="com.liyang.orchard.model.infosquare.LabourInfoSquare">
    insert into info_square(user_id,title,description,address,phone,recruit_num,name,info_type_id,release_date)
    values(#{LaIS.userId},#{LaIS.title},#{LaIS.description},#{LaIS.address},#{LaIS.phone},#{LaIS.recruitNum},#{name},4,NOW())
  </insert>

  <insert id="insertLeaseInfoSquare" useGeneratedKeys="true" parameterType="com.liyang.orchard.model.infosquare.LeaseInfoSquare">
    insert into info_square(user_id,title,description,address,phone,name,info_type_id,release_date)
    values(#{LeIS.userId},#{LeIS.title},#{LeIS.description},#{LeIS.address},#{LeIS.phone},#{name},5,NOW())
