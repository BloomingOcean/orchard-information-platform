  <select id="getInfoById" resultMap="BaseResultMap">
    select * from info_square
    <where>
      info_id=#{infoID}
    </where>
  </select>

  <select id="selectInfoSquareById" resultMap="BaseResultMap">
    select * from info_square
    <where>
      info_id=#{infoID}
