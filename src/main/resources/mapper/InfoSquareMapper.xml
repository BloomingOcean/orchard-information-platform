  <insert id="insertTransferInfoSquare" useGeneratedKeys="true" parameterType="com.liyang.orchard.model.infosquare.TransferInfoSquare">
    insert into info_square(user_id,title,description,address,phone,name,info_type_id,release_date)
    values(#{TIS.userId},#{TIS.title},#{TIS.description},#{TIS.address},#{TIS.phone},#{name},3,NOW())
  </insert>

  <select id="selectMyInfoSquareList" resultMap="PaginationInfoSquareMap">
    select * from info_square where user_id=#{userId}
  </select>

  <update id="updateInfoSquare">
    UPDATE info_square
    <set>
        user_id=#{UIQ.userId},title=#{UIQ.title},description=#{UIQ.description},
        address=#{UIQ.address},`name`=#{name},phone=#{UIQ.phone},
        video_url=#{UIQ.videoUrl},buy_weight=#{UIQ.buyWeight},
        recruit_num=#{UIQ.recruitNum},info_type_id=#{UIQ.infoTypeId},release_date=NOW()
    </set>
    <where>
      info_id = #{UIQ.infoId}
    </where>
  </update>

</mapper>